<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="5dp"
    tools:context=".MainActivity">


    <!-- task_description_container -->
    <LinearLayout
        android:id="@+id/task_description_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/task_description_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/task_text"
            android:gravity="center"
            android:textSize="26sp"
            />

    </LinearLayout>


    <!-- hat_slots -->
    <LinearLayout
        android:id="@+id/hat_slots"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/drop_slot_one"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/ic_men"
            android:gravity="center"
            android:orientation="vertical" />

        <LinearLayout
            android:id="@+id/drop_slot_two"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/ic_men"
            android:gravity="center"
            android:orientation="vertical" />

        <LinearLayout
            android:id="@+id/drop_slot_three"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/ic_men"
            android:gravity="center"
            android:orientation="vertical" />


        <LinearLayout
            android:id="@+id/drop_slot_four"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/ic_men"
            android:gravity="center"
            android:orientation="vertical" />


        <LinearLayout
            android:id="@+id/drop_slot_five"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/ic_men"
            android:gravity="center"
            android:orientation="vertical" />

    </LinearLayout>


    <!-- choises_basket_layout -->
    <LinearLayout
        android:id="@+id/choises_basket_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/hat_one"
            style="@style/hat_style"
            android:layout_width="@dimen/hat_size"
            android:layout_height="@dimen/hat_size"
            android:background="@drawable/ic_hat_one"
            android:backgroundTint="#7CB342"
            android:text="1" />

        <TextView
            android:id="@+id/hat_two"
            style="@style/hat_style"
            android:layout_width="@dimen/hat_size"
            android:layout_height="@dimen/hat_size"
            android:background="@drawable/ic_sport_hat"
            android:backgroundTint="#ED4541"
            android:text="2" />

        <TextView
            android:id="@+id/hat_three"
            style="@style/hat_style"
            android:layout_width="@dimen/hat_size"
            android:layout_height="@dimen/hat_size"
            android:background="@drawable/ic_wool_hat"
            android:backgroundTint="#1E78E5"
            android:text="3" />


        <TextView
            android:id="@+id/hat_four"
            style="@style/hat_style"
            android:layout_width="@dimen/hat_size"
            android:layout_height="@dimen/hat_size"
            android:background="@drawable/ic_witch_hat"
            android:backgroundTint="#FFB300"
            android:text="4" />


        <TextView
            android:id="@+id/hat_five"
            style="@style/hat_style"
            android:layout_width="@dimen/hat_size"
            android:layout_height="@dimen/hat_size"
            android:background="@drawable/ic_student_hat"
            android:backgroundTint="#5E35B1"
            android:text="5" />

    </LinearLayout>



</LinearLayout>